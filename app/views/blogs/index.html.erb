<h1>연남동 리스트</h1>

<div class="row">
  <% @yn_result.each do |yn| %> 
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to yn.title, yn.link, target: "blank" %></h3>
          <p><%= yn.description %></p>
          <p>
          <%= link_to "작가 더보기", yn.bloggerlink, target: "blank", class: "btn btn-default" %>
          <%= link_to "더보기", yn.link, target: "blank", class: "btn btn-primary" %>
          </p>
        </div>
      </div>    
    </div>
  <% end %>
</div>